<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<% product.forEach(element => {%>
<%- include('../partials/head', {title: 'Editando producto'}) %>
<link rel="stylesheet" href="/css/styles.css">
<body>
	<%- include('../partials/header') %>
<main>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= element.name %></i></h2>
			</div>
		</div>
        <div class="col-12">
        <form action="/products/" method="POST">
            <div class="row product-detail">
                <div class="col-12 col-md-6">
                    <label for="name" class="form-label">Nombre del producto:</label>
                    <input type="text" id="name" name="name" placeholder="Ej: Nike Phantom GT" class="form-input">
                </div>
                <div class="col-12 col-md-6">
                    <label for="price" class="form-label">Precio del producto:</label>
                    <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
                </div>
                <div class="col-12 col-md-6">
                    <label for="color" class="form-label">Color:</label>
                    <input type="text" id="color" name="color" placeholder="Ej: Azul chiclamino" class="form-input">
                </div>
                <div class="col-12 col-md-6">
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value label="Elige"></option>
                        <option value="collection">Colección</option>
                        <option value="man">Hombre</option>
                        <option value="woman">Mujer</option>
                        <option value="children">Niños</option>
                    </select>
                </div>
                <div class="col-12">
                    <label for="description" class="form-label">Descipción:</label>
                    <textarea name="description" id="description" class="form-input"><%= element.description %></textarea>
                </div>
                <div class="col-12 col-md-6">
                    <label for="image" class="form-label">Imagen del producto:</label>
                    <input type="file" id="image" name="image" class="form-input">
                </div>
                <div class="col-12">
                    <button type="submit" class="buy-now-button">Guardar producto</button>
                </div>
            </div>
        </form>
    </div>
	  <!-- /todos los productos -->
</main>
	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>
<% }) %>

</html>