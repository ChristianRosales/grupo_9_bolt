<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/sShoppingCart.css">
<!--agragando tipografia MuseoModerno-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Titillium+Web:ital,wght@0,200;0,300;0,400;0,600;0,700;1,200;1,300;1,400;1,600&display=swap" rel="stylesheet">
    <!--kit de iconos font awesome-->
    <script src="https://kit.fontawesome.com/6f2cfe4930.js" crossorigin="anonymous"></script>  
</head>
<body>
<div id="mySidenav" class="sidenav" style="width: 0px;">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
      <div class="search-container">
            <input type="text" placeholder="Search.." name="search">
            <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
      </div>
      <a href="#">COLECCIONES</a>
      <a href="#">HOMBRE</a>
      <a href="#">MUJER</a>
      <a href="#">NIÑOS</a>
      <div id="line"></div>
      <a href="#">ACERCA DE NOSOTROS</a>
      <a href="#">CONTACTO</a>
</div>      
  <script>
      function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
      }
      
      function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
      }
  </script>          
  <header class="main-header" id="home">
      <div class="main-header-top-bar">
          <div class="logo">            
              <a href="/">
                  <img src="/images/logo.png">
              </a>
          </div>
          <div class="empty"></div>
          <nav class="navTabs">
              <a href="#" class="navTabs-button" id="minicartIcon">
                  <i class="fas fa-shopping-cart" aria-hidden="true"></i>
              </a>
              <a href="#" class="navTabs-button" id="userIcon">
                  <i class="fas fa-user" aria-hidden="true"></i>
              </a>
              <a href="#" class="navTabs-button" id="menuIcon" onclick="openNav()">
                  <i class="fas fa-ellipsis-v" aria-hidden="true"></i>
              </a>
          </nav>
      </div>
  </header>    
<main>
<section class="cart-container">
    <article class="photo-container">
      <img src="/images/lebron_summer.jpeg" id="firstphoto">
    </article>
    <article class="attributes">
      <h1 class="nameP">LeBron 18 Low "Summer Refresh"</h1>
      <h3 class="colorP">COLOR: Lima blanco/Verde nuevo/Mango brillante</h3>
      <h3 class="sizeP">TALLA: 26</h3>
      <div class="amount-price">
           <div class="select-cantidad">
              <label>CANTIDAD</label>
              <select name="cantidad" id="cantidad">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>        
              </select>
           </div>
           <h2 class="priceP">Mex$2849</h2>
      </div>
      <div class="take-off">
        <a href="#">QUITAR PRODUCTO</a>
      </div>
    </article>
    <article class="paySection">
      <h2 class="order">Resumen del pedido</h2>
      <h2 class="subtotal">SUBTOTAL: Mex$2849</h2>
      <h1 class="total">TOTAL DEL PEDIDO MEX$2849</h1>
      <a href="#" class="pay-button">PROCEDER AL PAGO</a>
    </article>  
</section>
</main>
<footer>
  <section class="info">

      <div class="dropdown" id="help">        
          
          <button onclick="myFunction()" class="dropbtn">
          Ayuda
          </button>
          <div id="myDropdown" class="dropdown-content">
              <a href="#">Contáctanos</a>
              <a href="#">Métodos de pago y envíos</a>
              <a href="#">Estado del pedido</a>
              <a href="#">Preguntas frecuetes</a>
            </div>
      </div>
      <div class="dropdown" id="about">        
          <button onclick="myFunction2()" class="dropbtn2">Acerca de nosotros
          </button>
          <div id="myDropdown2" class="dropdown-content2">
              <a href="#">Compañia</a>
              <a href="#">Sucusales</a>
              <a href="#">Noticias</a>
            </div>
      </div>
      <div class="social">
          <a href="#"><i class="fab fa-facebook-square" aria-hidden="true"></i></a>
          <a href="#"><i class="fab fa-twitter-square" aria-hidden="true"></i></a>
          <a href="#"><i class="fab fa-instagram-square" aria-hidden="true"></i></a>
      </div>
  </section>
  <section class="copyright">
      <h5>Todos los derechos reservados</h5>
  </section>
</footer>
<script>
  /* When the user clicks on the button, 
  toggle between hiding and showing the dropdown content */
  function myFunction() {
    document.getElementById("myDropdown").classList.toggle("showHelp");
  }
  
  // Close the dropdown if the user clicks outside of it
  window.onclick = function(event) {
    if (!event.target.matches('.dropbtn')) {
      var dropdowns = document.getElementsByClassName("dropdown-content");
      var i;
      for (i = 0; i < dropdowns.length; i++) {
        var openDropdown = dropdowns[i];
        if (openDropdown.classList.contains('showHelp')) {
          openDropdown.classList.remove('showHelp');
        }
      }
    }
  }
</script>
<script>
  /* When the user clicks on the button, 
  toggle between hiding and showing the dropdown content */
  function myFunction2() {
    document.getElementById("myDropdown2").classList.toggle("showAbout");
  }
  
  // Close the dropdown if the user clicks outside of it
  window.onclick = function(event) {
    if (!event.target.matches('.dropbtn2')) {
      var dropdowns = document.getElementsByClassName("dropdown-content2");
      var i;
      for (i = 0; i < dropdowns.length; i++) {
        var openDropdown = dropdowns[i];
        if (openDropdown.classList.contains('showAbout')) {
          openDropdown.classList.remove('showAbout');
        }
      }
    }
  }
</script>
</body>
</html>